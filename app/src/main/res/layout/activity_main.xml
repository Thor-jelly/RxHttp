<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="#f00"
                android:gravity="center"
                android:onClick="getMethod"
                android:text="get请求"
                android:textColor="#fff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="#f00"
                android:gravity="center"
                android:onClick="postMethod"
                android:text="post请求"
                android:textColor="#fff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="#f00"
                android:gravity="center"
                android:onClick="postJsonMethod"
                android:text="post json 请求"
                android:textColor="#fff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="#f00"
                android:gravity="center"
                android:onClick="postUploadFileMethod"
                android:text="post upload 请求"
                android:textColor="#fff" />

            <com.jelly.thor.rxhttp.MyViewGroup
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:orientation="vertical">

                <com.jelly.thor.rxhttp.MyView
                    android:id="@+id/mv"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@color/colorAccent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </com.jelly.thor.rxhttp.MyViewGroup>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>